{
  "compilerOptions": {
    "outDir": ".build",
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es6"],
    "declaration": true,
    "removeComments": false,
    "stripInternal": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["dep", "node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["dep/**/*"]
}
